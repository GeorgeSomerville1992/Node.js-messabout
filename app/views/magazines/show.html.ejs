<div class="hero-unit">
  <h2 class="title"><%= magazine.title %></h2>
  <%- linkTo('Edit this magazine', editMagazinePath(params.id), {class: 'btn pull-right'}); %>
  <%- linkTo('Back to list', magazinePath(''), {class: 'btn pull-right'}); %>
</div>

<h2>Magazine Properties</h2>
<% for(var i in magazine) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= magazine[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>